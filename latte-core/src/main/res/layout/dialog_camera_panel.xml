<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:background="@color/APP_TRANSPARENT"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@drawable/bg_btn_camera_photo"
        android:gravity="center"
        android:text="@string/btn_photo"
        android:textColor="@color/TEXT_COLOR_DARK" />

    <View
        android:id="@+id/v_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/APP_TRANSPARENT"
        app:layout_constraintTop_toBottomOf="@id/btn_photo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_native"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@drawable/bg_btn_camera_native"
        android:gravity="center"
        android:text="@string/btn_native"
        android:textColor="@color/TEXT_COLOR_DARK"
        app:layout_constraintTop_toBottomOf="@id/v_photo" />

    <View
        android:id="@+id/v_native"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10dp"
        android:background="@color/APP_TRANSPARENT"
        app:layout_constraintTop_toBottomOf="@id/btn_native" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:background="@drawable/bg_btn_camera_cancel"
        android:gravity="center"
        android:text="@string/btn_cancel"
        android:textColor="@color/TEXT_COLOR_DARK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_native" />

</androidx.constraintlayout.widget.ConstraintLayout>