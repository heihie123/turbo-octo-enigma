<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/APP_WHITE">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/icon_ali_pay"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200dp"
        android:gravity="center"
        android:text="@string/icon_ali_pay"
        android:textColor="@color/ALIBB_BLUE"
        android:textSize="@dimen/_50sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/icon_weixin_pay" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/icon_weixin_pay"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200dp"
        android:gravity="center"
        android:text="@string/icon_weixin_pay"
        android:textColor="@color/WECHAT_GREEN"
        android:textSize="@dimen/_50sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/icon_ali_pay"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pay_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="@dimen/_50dp"
        android:layout_marginEnd="@dimen/_50dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:background="@color/APPBG_DARK"
        android:gravity="center"
        android:text="取消支付"
        android:textColor="@color/APP_WHITE"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_ali_pay" />

</androidx.constraintlayout.widget.ConstraintLayout>